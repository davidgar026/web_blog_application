<%- include("partials/header.ejs") %>
      
    <% locals.postArr.forEach((item, index) => { %>

      <div id="formDiv">


        <article  class="border border-dark-subtle rounded"><%= locals.postArr[index] %> <br><div id="byAuthor"> - <%= locals.nameArr[index] %> <%= locals.ageArr[index] %> </div></article>
        
        <div id="buttons">

          <form id="editBtn" action = "/users/:id" method="POST">
            <input type="hidden" name="index" value=" <%= index %>" />
            <button type="submit" class="btn btn-dark mt-2" style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">Edit</button>
          </form>


        <form id="deleteBtn" action = "/deletepost" method="POST">
          <input type="hidden" name="index" value=" <%= index %>" />
          <button type="submit" class="btn btn-dark mt-2" style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">Delete</button>
        </form>

        </div>
        
        

      </div>

    <% }) %>

<%- include("partials/footer.ejs") %>

